# Telegram Bot Configuration
BOT_TOKEN=your_bot_token_here
ALLOWED_CHAT_ID=your_chat_id_here

# Tmux Configuration
TMUX_SESSION=claude
COMMAND_TIMEOUT=30

# Telegram API Timeouts (seconds)
TELEGRAM_CONNECT_TIMEOUT=20
TELEGRAM_READ_TIMEOUT=30
TELEGRAM_WRITE_TIMEOUT=30
TELEGRAM_POOL_TIMEOUT=10

# Startup Retry Settings
# RETRY_MAX <= 0 means infinite retries
RETRY_MAX=10
RETRY_BASE_DELAY=5
RETRY_MAX_DELAY=60

# Logging Configuration
LOG_FILE=logs/claude_terminal.log
BOT_LOG_FILE=logs/bot.log
LOG_LEVEL=INFO
MAX_LOG_SIZE=10485760

# Security Configuration
SPAM_PROTECTION_SECONDS=5
MAX_COMMAND_LENGTH=500

# Metrics Configuration
METRICS_ENABLED=true
METRICS_FILE=logs/metrics.json

# Terminal Configuration
TAIL_LINES=25
